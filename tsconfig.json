{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "types": ["vite/client"],
    "typeRoots": [".node_modules/@types", ".resources/js/types"],
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
